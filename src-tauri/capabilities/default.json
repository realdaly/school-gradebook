{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "sql:default",
    "sql:allow-execute",
    "shell:allow-open",
    "sql:allow-load",
    "sql:allow-select",
    "fs:default",
    "dialog:default",
    "fs:allow-copy-file",
    "fs:allow-open",
    "dialog:allow-open",
    "core:webview:allow-set-webview-zoom",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPDATA/*"
        }
      ]
    }
  ]
}