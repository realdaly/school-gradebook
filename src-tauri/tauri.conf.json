{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "سجل الدرجات المدرسي",
  "version": "0.1.0",
  "identifier": "app.school-gradebook",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "سجل الدرجات المدرسي",
        "width": 1366,
        "height": 768
      }
    ],
    "security": {
      "capabilities": ["main-capability"],
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
